<div class="d-flex justify-content-center ">
<form class="event-form mx-auto transperant-background" action="/addevent/post" method="POST">  
  <div class="form-group">
    <label for="exampleFormControlSelect1">Type of the game</label>
    <select class="form-control" id="exampleFormControlSelect1" name="type">
      <option value="cash">Cash table</option>
        <option value="tournament">Tournament</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Date:</label>
    <input type="date" class="form-control" id="exampleFormControlInput1" placeholder="Date" name="eventdate">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Plase:</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Place"
     name="place">
  </div> 
  <div class="form-group">
    <label for="exampleFormControlInput1">Max players:</label>
    <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Max players" name="maxplayers">
  </div> 
  <div class="form-group">
    <label for="exampleFormControlInput1">Time:</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="00:00" name="time">
  </div> 
  <button type="submit" class="btn btn-dark">Add event</button>
</form>
</div>